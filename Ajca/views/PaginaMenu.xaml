<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ajca.views.PaginaMenu">
    <MasterDetailPage.Master>
        <ContentPage Title="Menú"
                     IconImageSource="menu.png">
            
            <StackLayout>
                <Button Text="Opción 1" Clicked="Opcion1_Clicked"/>
                <Button Text="Opción 2" Clicked="Opcion2_Clicked"/>
                <!-- Agrega más botones u otros elementos según sea necesario -->
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage>
            <!-- Aquí puedes colocar el contenido principal de tu aplicación -->
            <!-- Por ejemplo, un NavigationPage con la página inicial -->

        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>